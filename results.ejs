<html>
<style>
    .pageTitle {
        color: #550077;
        font-size: 1.5em;
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    }

    .tRowsHeader {
        border-bottom: 1px solid lightgray;
        background: #eeeeee;
    }

    .tRows {
        border-bottom: 1px solid lightgray;
    }

    .pageHeadersLeft {
        text-align: left;
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        padding: 0.2em;
        white-space: nowrap;
        color: #550077;
        font-size: 1em;
    }

    .pageHeadersRight {
        text-align: left;
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        padding: 0.2em 0 0.2em 2em;
        white-space: nowrap;
        color: #333333;
        font-size: 0.8em;
    }

    .tHeaders {
        text-align: left;
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        padding: 0.5em;
        white-space: nowrap;
        color: #550077;
    }

    .tContent {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        padding: 0.5em;
        white-space: nowrap;
    }

    .resultOK {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        padding: 0.5em;
        white-space: nowrap;
        color: #008800;
    }

    .resultWarning {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        padding: 0.5em;
        white-space: nowrap;
        color: #990000;
    }

    .leftSpacer {
        background: #eeeeee;
    }

    .preContent {
        padding: 0.5em;
        background: #eeeeee;
        border-radius: 0.5em;
    }

    .fragHeader {
        color: #0000aa;
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        font-size: 0.9em;
        font-weight: bolder;
    }

    .fragLight {
        color: #777777;
        font-family: monospace;
        font-size: 0.8em;
    }

    .fragHeavy {
        color: #553399;
        font-family: monospace;
        font-size: 0.8em;
        font-weight: bolder;
    }

    .fragRedHeavy {
        color: #cc0000;
        font-family: monospace;
        font-size: 0.8em;
        font-weight: bolder;
    }

    .fragRedLight {
        color: #cc0000;
        font-family: monospace;
        font-size: 0.8em;
    }
</style>

<body>
    <h1 class="pageTitle">Platform Health Check Summary</h1>
    <table style="border-collapse: collapse; padding: 1em;">
        <% for(const headerEntry of HeaderList) { %>
        <tr>
            <td class="pageHeadersLeft"><%- headerEntry.Key %></td>
        </tr>
        <tr>
            <td class="pageHeadersRight"><%- headerEntry.Value %></td>
        </tr>
        <% }; %>
    </table>
    <br>
    <br>
    <table style="border-collapse: collapse; padding: 1em;">
        <tr class="tRowsHeader">
            <th class="tHeaders">&nbsp;</th>
            <th class="tHeaders">Category</th>
            <th class="tHeaders">Observation</th>
            <th class="tHeaders">Status</th>
        </tr>
        <% for(const objectEntry of ObjectList) { %>
        <tr class="tRows">
            <td class="leftSpacer"></td> 
            <td class="tContent"><%- objectEntry.Header %></td>
            <td class="tContent">
                <pre class="preContent"><%- objectEntry.Results.Value.join('<br>') %></pre>
            </td>
            <% if(objectEntry.Results.Warning) { %>
            <td class="tContent resultWarning"><%- objectEntry.Results.Comments %></td>
            <% } else { %>
            <td class="tContent resultOK"><%- objectEntry.Results.Comments %></td>
            <% }; %>
        </tr>
        <% }; %>
    </table>
    <br>
</body>

</html>